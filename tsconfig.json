{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "public/lib"
    ],
    "types": [
        // add node as an option
        "node"
    ],
    // typeRoots option has been previously configured
    "typeRoots": [
        // add path to @types
        "node_modules/@types"
    ]
}